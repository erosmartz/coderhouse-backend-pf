<div class="container login-container">
  <form id="login-form" class="login-form">
    <h1 class="text-center">Bienvenido/a a nuestra página!</h1>
    <h2 class="text-center">Iniciar sesión</h2>
    <div class="form-group">
      <label for="username">e-Mail:</label>
      <input type="text" id="username" name="username" class="form-control" required />
    </div>
    <div class="form-group">
      <label for="password">Contraseña:</label>
      <input type="password" id="password" name="password" class="form-control" required />
    </div>
    <button id="login" type="submit" class="btn btn-primary btn-block">INGRESAR</button>
    <a class="d-block text-center my-2" href="/forgot">¿Olvidaste tu contraseña?</a>
    <a class="d-block text-center my-2" href="/signup">Regístrate</a>
    <a class="d-block text-center my-2" href="api/restore-password">Restablecer contraseña</a>
  </form>
  <a href="/api/session/github" class="d-block text-center"><button class="btn btn-dark">Log-In con GitHub</button></a>
</div>
<script src="js/login.js"></script>