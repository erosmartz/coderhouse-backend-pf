<div class="container mt-4">
    <div class="row">
        <div class="col">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/api/products">Ir a home</a>
                </div>
            </nav>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col">
            <h2>Eliminar Usuarios</h2>
            <ul class="list-group">
                {{#each users}}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <span class="fw-bold">{{first_name}} {{last_name}}</span><br>
                            <span class="text-muted">Email: {{email}}</span><br>
                            <span class="badge bg-secondary">{{role}}</span>
                            <span class="badge bg-secondary">{{_id}}</span>
                       </div>
                        <button type="button" class="btn btn-danger btn-sm button-delete-user" id="{{_id}}">Eliminar</button>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col">
            <h2>Actualizar Rol de Usuario</h2>
            <form id="update-role-user-form" method="POST">
                <div class="mb-3">
                    <label for="userEmail" class="form-label">Correo Electr√≥nico del Usuario:</label>
                    <input type="email" class="form-control" name="userEmail" id="userEmail" required>
                </div>
                <div class="mb-3">
                    <label for="newRole" class="form-label">Nuevo Rol:</label>
                    <select class="form-select" name="newRole" id="newRole">
                        <option value="user">User</option>
                        <option value="premium">Premium</option>
                    </select>
                </div>
                 <button type="submit" class="btn btn-secondary">Actualizar Rol</button>
            </form>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col">
            <a class="btn btn-secondary m-6 ml-10" href="/api/users">Ir a mostrar todos los usuarios</a>
        </div>
    </div>
</div>

<script src="/js/edit-user.js"></script>
