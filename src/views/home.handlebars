<div class="container">
  <div class="welcome-message d-flex align-items-center">
    <img src="/{{showAvatar}}" alt="" width="50" height="50" class="img-fluid rounded-circle mt-3">

    {{#if user}}
    <div class="ml-3">
      <p>Bienvenido/a a Pelis.Express, {{user.user.user.first_name}}!</p>
      <p>Eres un: {{user.user.user.role}}</p>
    </div>

    <div class="ml-auto">
      <button type="button" class="btn btn-secondary cart-button" id="{{user.user.user.cart}}">Carrito</button>
      <a id="profile-button" class="btn btn-secondary m-2" href="/api/users/{{user.user.user._id}}/profile">Perfil</a>
    </div>
    {{/if}}

    {{#if showEditProduct}}
    <a type="button" class="btn btn-secondary m-2" href="/api/updateproducts">Editar productos</a>
    {{/if}}
    {{#if showChangeRole}}
    <button type="button" class="btn btn-secondary change-role-button m-2" id="{{user.user.user._id}}">Panel
      Admin</button>
    {{/if}}

    <a id="logout-button" class="btn btn-secondary m-2" href="#">Cerrar Sesión</a>
  </div>

  <div class="row" id="product-list">
    {{#each products }}
    <div class="col-md-4 mb-3">
      <div class="card">
        <img src="/{{productImage}}" class="card-img-top" alt="Product Image">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">Categoría: {{category}}</p>
          <p class="card-text">Disponibilidad: {{availability}}</p>
          <p class="card-text">Precio: {{price}}</p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <button type="button" class="btn btn-sm btn-outline-secondary view-details-button" id="{{_id}}">Ver
                Detalles</button>
              <button type="button" class="btn btn-sm btn-secondary button-add-to-cart ml-2" id="{{_id}}">Agregar al
                Carrito</button>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>

  <div id="paginated" class="mt-3">
    <p>Page {{ pagination.currentPage }} of {{ pagination.totalPages }}</p>

    <nav aria-label="Pagination">
      <ul class="pagination">
        {{#if pagination.hasPrevPage}}
        <li class="page-item">
          <a class="page-link" href="{{ pagination.prevLink }}">Anterior</a>
        </li>
        {{/if}}

        {{#if pagination.hasNextPage}}
        <li class="page-item">
          <a class="page-link" href="{{ pagination.nextLink }}">Siguiente</a>
        </li>
        {{/if}}
      </ul>
    </nav>
  </div>
</div>

<script src="/js/product.js"></script>
<script src="/js/logout.js"></script>
<script src="/js/cart.js"></script>
<script src="/js/update-products.js"></script>
<script src="/js/edit-user.js"></script>